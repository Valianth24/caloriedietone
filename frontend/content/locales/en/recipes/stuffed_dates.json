  "instructions": [
    {"step": 1, "instruction": "Slice dates lengthwise to remove pits.", "tip": "Don't cut all the way through - create a pocket.", "duration": "5 minutes"},
    {"step": 2, "instruction": "Fill each date with 1 teaspoon almond butter.", "duration": "5 minutes"},
    {"step": 3, "instruction": "Press a whole almond on top if desired.", "duration": "2 minutes"},
    {"step": 4, "instruction": "Gently press dates closed.", "duration": "2 minutes"},
    {"step": 5, "instruction": "Melt chocolate with coconut oil using double boiler method.", "tip": "No water contact - chocolate will seize.", "duration": "5 minutes"},
    {"step": 6, "instruction": "Dip dates in melted chocolate or drizzle over top.", "duration": "5 minutes"},
    {"step": 7, "instruction": "Place on parchment paper, sprinkle sea salt.", "duration": "2 minutes"},
    {"step": 8, "instruction": "Add shredded coconut.", "duration": "1 minute"},
    {"step": 9, "instruction": "Refrigerate 15 minutes until chocolate sets.", "duration": "15 minutes"}
